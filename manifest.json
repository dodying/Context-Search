{
  "manifest_version": 2,
  "name": "Context Search WebExtension",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "version": "1.0.1",

  "background": {
    "scripts": ["browser-polyfill.js","background.js"]
  },

  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "bookmarks"
  ],

  "options_ui": {
      "page": "options/options.html",
      "chrome_style": true
      //"browser_style": true
  },

  "icons": {
    "48": "icons/search.png"
  }
